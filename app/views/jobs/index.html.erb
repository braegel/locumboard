<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Provider</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>Specialization</th>
    <th>Location</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.provider %></td>
    <td><%= job.startdate %></td>
    <td><%= job.enddate %></td>
    <td><%= job.specialization %></td>
    <td><%= job.location %></td>
    <td><%= job.comment %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

